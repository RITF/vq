<% unless @record.nil? %>
  <div id="score-board" class="row">
    <div id="counter" class="small-6 columns"></div>
  </div>
  <div class="medium-6 medium-push-3 columns">
    <div class="row">
      <div id="acheivement">
        <div id="burst"></div>
        <div id="acheivement-level">
          <p>LEVEL</p>
          <h1 id="user-level"><%= @level.to_i %></h1>
          <p>You're In</p>
          <h3><div id="placement"><%= @position[0].ordinalize %></div></h3>
          <p>Place!</p>
        </div>
      </div>
      <br/>
      <% if @ref.blank? %>
        <a class="button" href="#" onclick="vqStart(); return false;">
          <strong>Try again!</strong>
        </a>
      <% else %>
        <a class="button" href="<%= play_vq_index_path %>">
          <strong>Play Now!</strong>
        </a>
      <% end %>
      <br/>
      <div id="social-buttons" class="row">
        <%= render 'social_buttons' %>
      </div>
  
      <div id="results-table">
        <%= render 'stats' %>
      </div>
      <a id="logo" style="margin-left:10px;" class="text-center" href="<%= root_url %>"> 
         <%= render 'vq_logo' %>
      </a>
    </div>      
  </div>      
  <div class="medium-3 medium-pull-6 columns"> <!-- left side: ads can go here --> </div>
  <div class="medium-3 columns"> <!-- right side: ads can go here --> </div>
<% end %>
