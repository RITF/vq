    <div class="row full-width" id="banner-container">
      <div id="banner">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Responsive-Template -->
        <ins class="adsbygoogle"
          style="display:block"
          data-ad-client="ca-pub-2637858743301173"
          data-ad-slot="1872190048"
          data-ad-format="auto">
        </ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>
    <div id="spinner-container" class="hide">
      <div class="spinner">
        <div></div><div></div><div></div><div></div>
      </div>
    </div>
    <%= yield %>

    <script>
      $(document).foundation();
    </script>

    <%= render 'social_share' %>
  </body>
</html>
